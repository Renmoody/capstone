<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary color for the Toolbar background -->
        <item name="colorPrimary">@color/moss_green</item>
        <!-- Secondary color for Toolbar text and icons -->
        <item name="colorPrimaryDark">@color/moss_green</item>
        <!-- Color for controls within the Toolbar -->
        <item name="colorAccent">@color/white</item>
        <!-- Text color in the Toolbar (optional) -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <!-- Custom Preference Theme -->
    <style name="PreferenceTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the background color of the Preference screen -->
        <item name="android:background">@color/white</item>
        <!-- Text color for Preference items -->
        <item name="android:textColorPrimary">@color/eerie_black</item>
    </style>

    <style name="CustomCalendarDateTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/eerie_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <!--header background-->
        <item name="colorAccent">@color/white</item>
        <!--header textcolor-->
        <item name="android:textColorPrimaryInverse">@color/moss_green</item>
        <!--body background-->
        <item name="android:windowBackground">@color/moss_green</item>
        <!--selected day-->
        <item name="android:colorControlActivated">#ff8000</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">@color/eerie_black</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@color/eerie_black</item>
        <!--cancel&ok-->
        <item name="android:textColor">@color/eerie_black</item>
    </style>
</resources>
