<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    tools:context=".activities.ui.dashboard.DashboardFragment"
    android:background="@color/moss_green"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/calendarText"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upcoming_events"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/eerie_black"
        android:textSize="@dimen/_20ssp"
        android:background="@drawable/text_view_rounded"
        android:textStyle="bold"
        />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:weekDayTextAppearance="@style/CustomCalendarDateTextAppearance"
        android:dateTextAppearance="@style/CustomCalendarDateTextAppearance"
        android:background="@drawable/text_view_rounded"
        android:theme="@style/CustomDatePickerDialog"
        />

    <ListView
        android:id="@+id/listOfEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:dividerHeight="@dimen/_6sdp"
        android:divider="@color/moss_green"

        />


</LinearLayout>